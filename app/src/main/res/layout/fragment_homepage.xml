    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/list_with_fab_bottom_margin"
        app:layout_windowInsets="bottom">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/content_inset_less">

            <ImageView
                android:id="@+id/landingIcon"
                android:layout_width="215dp"
                android:layout_height="215dp"
                android:layout_marginBottom="@dimen/content_inset"
                android:layout_marginTop="@dimen/content_inset_less"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/homepage_landing_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/landingMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/content_inset_less"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/homepage_description"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/content_text_size" />

           <!--  <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_top"
                android:background="@drawable/blue_menu_btn"
                style="@style/main_menu_btnTop"
                android:id="@+id/btn_top"
                android:layout_gravity="center_horizontal"
                android:autoLink="all" /> -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_mid"
                android:background="@drawable/blue_menu_btn"
                style="@style/main_menu_btnTop"
                android:id="@+id/btn_mid"
                android:autoLink="all" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_bottom"
                android:background="@drawable/blue_menu_btn"
                style="@style/main_menu_btnTop"
                android:id="@+id/btn_bottom"
                android:layout_gravity="center_horizontal"
                android:autoLink="all" />

        </LinearLayout>

</ScrollView>

    <!--</ScrollView>-->

